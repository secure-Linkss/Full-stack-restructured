# ============================================================================
# Brain Link Tracker - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Secret key for Flask sessions and JWT (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters

# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@host:port/database

# Short.io API configuration (required for link shortening)
SHORTIO_API_KEY=your-shortio-api-key
SHORTIO_DOMAIN=your-domain.short.gy

# Default Admin Passwords (REQUIRED FOR PRODUCTION)
# These are used to create default admin accounts on first run
DEFAULT_ADMIN_PASSWORD=your-secure-password-here
DEFAULT_ADMIN_PASSWORD_2=your-secure-password-here

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_PORT=5000

# Database pool settings
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=20

# CORS origins (comma-separated)
# Use * for development, specific domains for production
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Email/SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@brainlinktracker.com

# Telegram bot
TELEGRAM_BOT_TOKEN_SYSTEM=your-telegram-bot-token

# Stripe payment processing
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Crypto payments
ENABLE_CRYPTO_PAYMENTS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/brainlink.log

# Frontend API URL (for Vite)
VITE_API_URL=/api

# Railway specific (automatically set by Railway)
# RAILWAY_DEPLOYMENT_ID=auto-set-by-railway
# PORT=auto-set-by-railway
